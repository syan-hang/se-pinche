<view >
  <!--头像和姓名区域-->
  <view class="head">
    <view class="name_icon">
      <image src="{{ GeRenInfo.headSrc }}" mode="widthFix"></image>
    </view>
  </view>
  <!--其余信息列表-->
<form bindsubmit='submit'>
  <view class="wrap">
    <view class="list">
      <image src="../../icon/name.png"></image>
      <view class="words">
        <text class="item">姓名:</text>
        <input class="inputs"  placeholder="{{ GeRenInfo.name }}" value="{{ GeRenInfo.name }}" name="name"></input>
      </view>
    </view>
    <view class="list">
      <image src="../../icon/phone.png"></image>
      <view class="words">
        <text class="item">手机:</text>
        <input class="inputs" value="{{ GeRenInfo.phone_number }}" placeholder="{{ GeRenInfo.phone_number }}" name="phone"></input>
      </view>
    </view>
    <view class="list">
      <image src="../../icon/college.png"></image>
      <view class="words">
        <text class="item">学院:</text>
        <input class="inputs" value="{{ GeRenInfo.college }}" placeholder="{{ GeRenInfo.college }}" name="college"></input>
      </view>
    </view>
    <view class="list">
      <image src="../../icon/number.png"></image>
      <view class="words">
        <text class="item">学号:</text>
        <input class="inputs" value="{{ GeRenInfo.stu_num }}" placeholder="{{ GeRenInfo.stu_num }}" name="stu_num">{{ GeRenInfo.number }}</input>
      </view>
    </view>
    <view class="list">
      <image src="../../icon/email.png"></image>
      <view class="words">
        <text class="item">邮箱:</text>
        <input class="inputs" value="{{ GeRenInfo.mail }}" placeholder="{{ GeRenInfo.mail }}" name="mail"></input>
      </view>
    </view>
    <view class="list">
      <image src="../../icon/score.png"></image>
      <view class="words">
        <text class="item">信誉:</text>
        <text class="credit" >{{ GeRenInfo.xinyu }}</text>
      </view>
    </view>
  </view>
 
  <!--修改按钮-->
  <view class="save_type">
    <button form-type='submit' class="save">保存</button>
  </view>
    
</form>

</view>
